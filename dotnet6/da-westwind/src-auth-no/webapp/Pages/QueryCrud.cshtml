@page
@model MyApp.Namespace.QueryCrudModel
@{
}
<style type="text/css">

#table_box_bootstrap{
    display: none;
}

.box div, .box ul {
    float: right;
}

.pagination>li>a{
    position: relative;
    float: left;
    padding: 6px 12px;
    margin-left: -1px;
    line-height: 1.42857143;
    color: #337ab7;
    text-decoration: none;
    background-color: #fff;
    border: 1px solid #ddd;
}

.pagination>.active>a{
    z-index: 3;
    color: #fff;
    cursor: default;
    background-color: #337ab7;
    border-color: #337ab7;
}

</style>
<section class="container text-center">
<div class=row>
<div class="col justify-content-center">

<h5>Query</h5>

@if(!string.IsNullOrEmpty(Model.ErrorMessage))
{
  <p style="color:red; font-weight: bold;">@Model.ErrorMessage</p>
}

@if(!string.IsNullOrEmpty(Model.SuccessMessage))
{
  <p style="color:green; font-weight: bold;">@Model.SuccessMessage</p>
}

<form method="post">
	<div class="row mb-3 justify-content-center">
		<div class="col-2">
			<label for="PartialProductName" class="col-form-label">Product</label>
		</div>
		<div class="col-4">
			<input type="search" class="form-control" placeholder="Partial Name" 
				id="PartialProductName" 
				name="partialProductName" value="@Model.PartialProductName">
		</div>
		<div class="col-2">
			<button type="submit" class="btn btn-primary" formaction="/QueryCrud" 
				name="buttonPressed" value="SearchByPartialProductName">Search</button>
		</div>
	</div>
	<div class="row mb-3 justify-content-center">
		<div class="col-2">
			<label for="SelectedCategoryId" class="col-form-label">Category</label>
		</div>
		<div class="col-4">
			<select class="form-control" id="SelectedCategoryId" name="selectedCategoryId">
				<option value="0">select ...</option>
				@foreach (var item in Model.SelectListOfCatagories)
				{
						if (Model.SelectedCategoryId == item.CategoryId)
						{
							<option value="@item.CategoryId" selected>@item.CategoryName</option>
						}
						else
						{
							<option value="@item.CategoryId">@item.CategoryName</option>
						}
				}
			</select>
		</div>
		<div class="col-2">
			<button type="submit" class="btn btn-primary" formaction="/QueryCrud" 
				name="buttonPressed" value="SearchByCategory">Search</button>
		</div>
	</div>


@if(Model.SearchedProducts != null)
{
  <div id="table_box_bootstrap">
  <table class="table table-hover">
  <thead>
	<tr>
	  <th>Action</th>
	  <th>ProductName</th>
	  <th>Category</th>
	  <th>QuantityPerUnit</th>
	  <th>UnitPrice</th>
	  <th>Discontinued</th>       
	</tr>
  </thead>
  @if(Model.SearchedProducts.Count == 0)
  {
	<tr><td colspan="6"><i>There are no Products available.</i></td></tr>
  }
  @foreach(var item in Model.SearchedProducts)
  {
	<tr>
	  <td><button type="submit" class="btn btn-primary" 
		  name="ProductId" formaction="/QueryCrud" value="@item.ProductId">Edit</button></td>
	  <td>@item.ProductName</td>
	  <td>
		<select disabled>
		  <option value="0">select ...</option>
		  @foreach (var element in Model.SelectListOfCatagories)
		  {
			if (item.CategoryId == element.CategoryId)
			{
			  <option value="@element.CategoryId" selected>@element.CategoryName</option>
			}
			else
			{
			  <option value="@element.CategoryId">@element.CategoryName</option>
			}
		  }
		</select>  
	  </td>
	  <td>@item.QuantityPerUnit</td>
	  <td>@item.UnitPrice</td>
	  <td><input type="checkbox" disabled checked="@item.Discontinued"></input></td>
	</tr>
  }
  </table>
  </div>
}
</form>
</div>

<div class="col">
<form method="post">
	<h5>Crud</h5>

@* <input type="hidden" name="partialProductName" value="@Model.PartialProductName">
<input type="hidden" name="selectedCategoryId" value="@Model.SelectedCategoryId">
